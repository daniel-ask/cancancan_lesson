<h1 class='mt-5'>Listings</h1>
<div class="container">
  <div class="flex">
    <% @listings.each do |listing| %>
      <div class="card m-2" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %></p>
          <%= link_to 'Show', listing, class:'btn btn-primary'%>
          <%if user_signed_in? && current_user == listing.user%>
            <%= link_to 'Edit', edit_listing_path(listing), class:'btn btn-warning' %>
            <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
